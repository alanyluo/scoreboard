<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--overall scoreboard-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--time-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="118dp"
            android:text="20:00"
            android:textSize="60sp"
            />

        <!--scores and half marker-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--home scores-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--home name-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="42dp"
                    android:text="Home"
                    android:textSize="30sp"
                    />

                <!--home score-->
                <TextView
                    android:id="@+id/homescore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="45dp"
                    android:text="00"
                    android:textSize="70sp"
                    />

            </LinearLayout>

            <!--half marker-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--the word "half"-->
                <TextView
                    android:id="@+id/theword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:text="half"
                    android:textAllCaps="true"
                    android:textSize="20sp"/>

                <!--half number-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/theword"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:text="1"
                    android:textAllCaps="true"
                    android:textSize="30sp"/>

            </RelativeLayout>

            <!--away scores-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--away name-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="39dp"
                    android:text="Away"
                    android:textSize="30sp"
                    />

                <!--away score-->
                <TextView
                    android:id="@+id/awayscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="34dp"
                    android:text="00"
                    android:textSize="70sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <!--advanced stats-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--home stat names-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--shots on target-->
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="shots on target"
                    android:textAllCaps="true"
                    android:textSize="20sp"/>

                <!--corners-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="corners"
                    android:textAllCaps="true"
                    android:textSize="20sp"/>

            </LinearLayout>

            <!--home stat numbers-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--shots-->
                <TextView
                    android:id="@+id/homeshots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="44dp"
                    android:text="0"
                    android:textSize="20sp"/>

                <!--corners-->
                <TextView
                    android:id="@+id/homecorners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textSize="20sp"/>

            </LinearLayout>

            <!--away stat names-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--shots on target-->
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginBottom="20dp"
                    android:text="shots on target"
                    android:textAllCaps="true"
                    android:textSize="20sp"/>

                <!--corners-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:text="corners"
                    android:textAllCaps="true"
                    android:textSize="20sp"/>

            </LinearLayout>

            <!--away stat numbers-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--shots-->
                <TextView
                    android:id="@+id/awayshots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="44dp"
                    android:text="0"
                    android:textSize="20sp"/>

                <!--corners-->
                <TextView
                    android:id="@+id/awaycorners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textSize="20sp"/>

            </LinearLayout>

        </LinearLayout>

        <!--people scored X_X-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--home scored X_X-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:onClick="hmarca"
                android:text="home scored!!"
                android:textAllCaps="true"/>

            <!--away scored X_X-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"
                android:onClick="amarca"
                android:text="away scored!!"
                android:textAllCaps="true"/>

        </LinearLayout>

        <!--corners corners haaha-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--home corners-->
            <Button
                android:id="@+id/homecornerbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:onClick="hcorner"
                android:text="home corner kick"
                android:textAllCaps="true"
                />

            <!--away corners-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="20dp"
                android:onClick="acorner"
                android:text="away corner kick"
                android:textAllCaps="true"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
